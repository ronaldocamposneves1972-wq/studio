rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user is signed in.
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper function to get the user ID
    function userId() {
      return request.auth.uid;
    }

    /**
     * @description Allows signed-in users to manage their own user data.
     * @path /users/{userId}
     */
    match /users/{userId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && userId() == userId;
      allow update, delete: if isSignedIn() && userId() == userId;
    }

    /**
     * @description Allows admins to read and write admin role data.
     * @path /roles_admin/{userId}
     */
    match /roles_admin/{userId} {
      allow get, list: if isSignedIn() && get(/databases/$(database)/documents/roles_admin/$(userId())).data.admin == true;
      allow create, update, delete: if isSignedIn() && get(/databases/$(database)/documents/roles_admin/$(userId())).data.admin == true;
    }

    /**
     * @description Allows signed-in users to manage client data.
     * @path /clients/{clientId}
     */
    match /clients/{clientId} {
      allow get, list: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn();
    }

    /**
     * @description Allows signed-in users to manage client document data.
     * @path /clients/{clientId}/documents/{documentId}
     */
    match /clients/{clientId}/documents/{documentId} {
      allow get, list: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn();
    }

    /**
     * @description Allows signed-in users to manage financial institution data.
     * @path /financial_institutions/{financialInstitutionId}
     */
    match /financial_institutions/{financialInstitutionId} {
      allow get, list: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn();
    }

    /**
     * @description Allows signed-in users to manage consortium data.
     * @path /consortiums/{consortiumId}
     */
    match /consortiums/{consortiumId} {
      allow get, list: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn();
    }

    /**
     * @description Allows signed-in users to manage credit product data.
     * @path /credit_products/{creditProductId}
     */
    match /credit_products/{creditProductId} {
      allow get, list: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn();
    }

    /**
     * @description Allows signed-in users to manage product combo data.
     * @path /product_combos/{productComboId}
     */
    match /product_combos/{productComboId} {
      allow get, list: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn();
    }

    /**
     * @description Allows signed-in users to manage sales proposal data.
     * @path /sales_proposals/{salesProposalId}
     */
    match /sales_proposals/{salesProposalId} {
      allow get, list: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn();
    }

    /**
     * @description Allows signed-in users to manage commission data.
     * @path /commissions/{commissionId}
     */
    match /commissions/{commissionId} {
      allow get, list: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn();
    }

    /**
     * @description Allows signed-in users to manage quiz data.
     * @path /quizzes/{quizId}
     */
    match /quizzes/{quizId} {
      allow get, list: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn();
    }

    /**
     * @description Allows signed-in users to manage question data.
     * @path /questions/{questionId}
     */
    match /questions/{questionId} {
      allow get, list: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn();
    }
  }
}