rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Grants owner-only access to user profiles.
     * @path /users/{userId}
     * @allow (create) - User with UID 'user123' can create a profile at /users/user123.
     * @allow (get) - User with UID 'user123' can read their profile at /users/user123.
     * @allow (update) - User with UID 'user123' can update their profile at /users/user123.
     * @allow (delete) - User with UID 'user123' can delete their profile at /users/user123.
     * @deny (create) - User with UID 'user456' cannot create a profile at /users/user123.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isSignedIn() && isOwner(userId);
      allow list: if false;
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isExistingOwner(userId);
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }

    /**
     * @description Grants public read and write access to client profiles.
     * @path /clients/{clientId}
     * @allow (create) - Any user can create a client profile.
     * @allow (get) - Any user can read a client profile.
     * @allow (update) - Any user can update a client profile.
     * @allow (delete) - Any user can delete a client profile.
     * @principle Allows open read and write access to all client profiles.
     */
    match /clients/{clientId} {
        allow get, list, create, update, delete: if true;
    }

    /**
     * @description Grants public read and write access to client documents.
     * @path /clients/{clientId}/documents/{documentId}
     * @allow (create) - Any user can create a client document.
     * @allow (get) - Any user can read a client document.
     * @allow (update) - Any user can update a client document.
     * @allow (delete) - Any user can delete a client document.
     * @principle Allows open read and write access to all client documents.
     */
    match /clients/{clientId}/documents/{documentId} {
        allow get, list, create, update, delete: if true;
    }

    /**
     * @description Grants public read and write access to quiz answers.
     * @path /clients/{clientId}/quizAnswers/{quizAnswerId}
     * @allow (create) - Any user can create a quiz answer.
     * @allow (get) - Any user can read a quiz answer.
     * @allow (update) - Any user can update a quiz answer.
     * @allow (delete) - Any user can delete a quiz answer.
     * @principle Allows open read and write access to all quiz answers.
     */
    match /clients/{clientId}/quizAnswers/{quizAnswerId} {
        allow get, list, create, update, delete: if true;
    }

    /**
     * @description Grants public read and write access to product information.
     * @path /products/{productId}
     * @allow (create) - Any user can create a product.
     * @allow (get) - Any user can read a product.
     * @allow (update) - Any user can update a product.
     * @allow (delete) - Any user can delete a product.
     * @principle Allows open read and write access to all products.
     */
    match /products/{productId} {
        allow get, list, create, update, delete: if true;
    }

    /**
     * @description Grants public read and write access to bank information.
     * @path /banks/{bankId}
     * @allow (create) - Any user can create a bank.
     * @allow (get) - Any user can read a bank.
     * @allow (update) - Any user can update a bank.
     * @allow (delete) - Any user can delete a bank.
     * @principle Allows open read and write access to all banks.
     */
    match /banks/{bankId} {
        allow get, list, create, update, delete: if true;
    }

    /**
     * @description Grants public read and write access to sales information.
     * @path /sales/{saleId}
     * @allow (create) - Any user can create a sale.
     * @allow (get) - Any user can read a sale.
     * @allow (update) - Any user can update a sale.
     * @allow (delete) - Any user can delete a sale.
     * @principle Allows open read and write access to all sales.
     */
    match /sales/{saleId} {
        allow get, list, create, update, delete: if true;
    }

    /**
     * @description Grants public read and write access to quiz questions.
     * @path /quizQuestions/{quizQuestionId}
     * @allow (create) - Any user can create a quiz question.
     * @allow (get) - Any user can read a quiz question.
     * @allow (update) - Any user can update a quiz question.
     * @allow (delete) - Any user can delete a quiz question.
     * @principle Allows open read and write access to all quiz questions.
     */
    match /quizQuestions/{quizQuestionId} {
        allow get, list, create, update, delete: if true;
    }
  }
}